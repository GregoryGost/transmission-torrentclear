{
  "clearMocks": true,
  "preset": "ts-jest/presets/default-esm",
  "roots": ["./"],
  "testEnvironment": "node",
  "transform": {
    "^.+\\.ts?$": ["ts-jest", { "tsconfig": "./tsconfig.json" }]
  },
  "transformIgnorePatterns": ["./node_modules/", "./dist/"],
  "extensionsToTreatAsEsm": [".ts"],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 95,
      "statements": 90
    }
  },
  "coverageReporters": ["json", "lcov", "text", "clover"]
}
